<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Odiseo\SyliusReferralsPlugin\Entity\Affiliate" table="odiseo_affiliate">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="tokenValue" type="string" column="token_value" unique="true"/>
        <field name="type" type="string"/>
        <field name="expiresAt" type="datetime" column="expires_at" nullable="true"/>
        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-one field="customer" target-entity="Sylius\Component\Customer\Model\CustomerInterface">
            <join-column name="customer_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one field="product" target-entity="Sylius\Component\Product\Model\ProductInterface">
            <join-column name="product_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <one-to-many field="views" target-entity="Odiseo\SyliusReferralsPlugin\Entity\AffiliateViewInterface" mapped-by="affiliate">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </mapped-superclass>
</doctrine-mapping>
